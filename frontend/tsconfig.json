{
  "compilerOptions": {
    "target": "es2018",
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "removeComments": true, 
    "isolatedModules": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "~*": ["./*"]
    }
  }
}
